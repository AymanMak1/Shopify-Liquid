<div>
    <h3>{{ section.settings.username }}</h3>
    <img src="{{ section.settings.user_img | img_url:'300x300'}}" alt="">
    <p>{{ section.settings.user_bio}}</p>
</div>
{% schema %}
{
    "presets": [
      {
        "category": "Profile",
        "name":"User Profile"
      }
    ],

    "name": "Profile",

    "settings": [
      {
        "type": "text",
        "id":"username",
        "label":"Username"
      },
      {
        "type":"image_picker",
        "id": "user_img",
        "label":"User Photo"
      },
      {
        "type": "richtext",
        "id": "user_bio",
        "label": "User Bio"
      }
    ]
}
  {% endschema %}